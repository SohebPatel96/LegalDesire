<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@mipmap/panic"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/message_contact"
        android:layout_alignParentStart="true"
        android:layout_marginTop="250dp"
        android:id="@+id/imageView3" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/call_police"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView4"
        android:layout_below="@+id/imageView3" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/imageView3"
        android:background="@color/white"
        android:layout_toEndOf="@+id/imageView3"
        android:text="Message Emergency Contacts"
        android:layout_above="@+id/view4" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/orange_A400"
        android:id="@+id/view4"
        android:layout_below="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/orange_A400"
        android:id="@+id/view6"
        android:layout_below="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/button2"
        android:text="Call Police"
        android:background="@color/white"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_below="@+id/view4" />


</RelativeLayout>
